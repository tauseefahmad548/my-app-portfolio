<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pk.smallapps.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/apps_title_top_margin"
        android:layout_marginBottom="@dimen/apps_title_bottom_margin"
        android:text="@string/apps_list_title"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/button_popular_movies"
        style="@style/appsButtonStyle"
        android:text="@string/popular_movies" />

    <Button
        android:id="@+id/button_stock_hawk"
        style="@style/appsButtonStyle"
        android:text="@string/stock_hawk" />
    <Button
        android:id="@+id/button_build_it_bigger"
        style="@style/appsButtonStyle"
        android:text="@string/build_it_bigger" />
    <Button
        android:id="@+id/button_material"
        style="@style/appsButtonStyle"
        android:text="@string/make_your_app_material" />
    <Button
        android:id="@+id/button_go_ubiquitous"
        style="@style/appsButtonStyle"
        android:text="@string/go_ubiquitous" />
    <Button
        android:id="@+id/button_capstone"
        style="@style/appsButtonStyle"
        android:text="@string/capstone" />
</LinearLayout>
